
<% if admin_user == nil %>
<h1> Invalid Request</h1>
<%= link_to "Passenger Home", passengers_path %>
<% else %>

<p style="color: green"><%= notice %></p>

<h1>Admins</h1>

<div id="admins">
  <% @admins.each do |admin| %>
    <%= render admin %>
    <p>
    <br><%= link_to "Edit Admin Details", edit_admin_path(admin.username) %> <br>
    <br><%= link_to "View Trains", trains_url('index') %> <br>
    <br><%= link_to "View Passengers", passengers_url('index') %> <br>
    <br><%= link_to "View Tickets", tickets_url('index') %> <br>
    <br><%= link_to "View Reviews", reviews_url('index') %> <br>
    <br><%= link_to "Log Out", logout_path %> <br>
    </p>
  <% end %>
</div>

<% end %>
