<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :passengerid, style: "display: block" %>
    <%= form.text_field :passengerid %>
  </div>

  <div>
    <%= form.label :trainid, style: "display: block" %>
    <%= form.text_field :trainid %>
  </div>

  <div>
    <%= form.label :rating, style: "display: block" %>
    <%# <%= form.number_field :rating %> 
    <%= number_field_tag 'review[rating]', review.rating, in: 1..5 %>
  </div>

  <div>
    <%= form.label :feedback, style: "display: block" %>
    <%= form.text_field :feedback %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
